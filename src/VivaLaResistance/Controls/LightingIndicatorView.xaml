<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="VivaLaResistance.Controls.LightingIndicatorView"
      x:Name="this"
      VerticalOptions="End"
      HorizontalOptions="Fill">

    <!-- Warning banner â€” only visible when lighting is not Good -->
    <Grid BackgroundColor="#CC000000"
          Padding="16,10"
          IsVisible="{Binding Source={x:Reference this}, Path=IsWarningVisible}">
        <Label x:Name="WarningLabel"
               TextColor="White"
               FontSize="14"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Grid>

</Grid>
